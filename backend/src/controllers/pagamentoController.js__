exports.liberarManual = async (req, res) => {
  try {
    const { id } = req.params;
    const [pagamento] = await db.query("SELECT mac, ip, nome_plano FROM pagamentos WHERE id = ?", [id]);

    if (!pagamento.length) {
      return res.status(404).json({ message: "Pagamento nÃ£o encontrado." });
    }

    const { mac, ip, nome_plano } = pagamento[0];

    // Libera o usuÃ¡rio no Mikrotik
    await liberarUsuario({ mac, ip, plano: nome_plano });

    // Atualiza o status do pagamento
    await db.query("UPDATE pagamentos SET status = 'approved' WHERE id = ?", [id]);


    res.json({ message: "UsuÃ¡rio liberado manualmente." });
